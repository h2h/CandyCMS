<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title</title>
    @Style("/Content/plugins/semantic/semantic.css")
    @Style("/Content/css/admin.css")
</head>
<body>
    <div class="page-container">
        <header class="header-menu">
            <div class="row-l-220">
                <div class="col-l-220">
                    <div class="ui segment logo">
                        <a>LOGO</a>
                    </div>
                </div>
                <div class="col-l-100">
                    <nav class="ui large menu">
                        <a href="@Url.Action("Index", "Home", new { area = "" })" class="item">网站首页</a>
                        <a href="@Url.Action("Index", "Home")" class="item">后台首页</a>
                        <div class="right menu">
                            <div class="item">
                                <div class="ui icon input">
                                    <input type="text" placeholder="搜索...">
                                    <i class="search link icon"></i>
                                </div>
                            </div>
                            <div class="ui dropdown pointing item user-profile">
                                <i class="dropdown icon"></i>
                                <img class="ui avatar image" src="http://semantic-ui.com/images/avatar/small/jenny.jpg">
                                Hubert
                                <div class="menu">
                                    <a class="item">登录日志</a>
                                    <a href="@Url.Action("Profile", "User")" class="item" title="@Html.Lang("Candy.Plugin.Admin.Profile")">个人资料</a>
                                    <a href="@Url.Action("SignOut", "User", new { area = "" })" class="item">退出登录</a>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <section class="page-context">
            <div class="row-l-220">
                <div class="col-l-220">
                    <aside class="page-sidebar">
                        <nav class="ui fluid vertical accordion menu">
                            <div class="ui dropdown item pointing left">
                                <i class="edit icon"></i>
                                控制台
                                <div class="menu">
                                    <a class="item"><i class="edit icon"></i>更新</a>
                                    <a class="item"><i class="globe icon"></i>统计</a>
                                </div>
                            </div>
                            <div class="ui dropdown item pointing left">
                                <i class="settings icon"></i>
                                设置
                                <div class="menu">
                                    <a href="@Url.Action("Index","Settings")" class="item" title="@Html.Lang("Candy.Plugin.Admin.Setting.BaseSetting")"><i class="edit icon"></i>@Html.Lang("Candy.Plugin.Admin.Setting.BaseSetting")</a>
                                    <a href="@Url.Action("Profile", "User")" class="item" title="@Html.Lang("Candy.Plugin.Admin.Profile")"><i class="settings icon"></i>@Html.Lang("Candy.Plugin.Admin.Profile")</a>
                                </div>
                            </div>
                            <div class="header item">
                            </div>
                            <div class="ui dropdown item pointing left">
                                <i class="dropdown icon"></i>
                                主题
                                <div class="menu">
                                    <a class="item"><i class="edit icon"></i> Edit Profile</a>
                                    <a class="item"><i class="globe icon"></i> Choose Language</a>
                                    <a class="item"><i class="settings icon"></i> Account Settings</a>
                                </div>
                            </div>
                            <div class="ui dropdown item pointing left">
                                <i class="dropdown icon"></i>
                                插件
                                <div class="menu">
                                    <a class="item"><i class="edit icon"></i>编辑个人资料</a>
                                    <a class="item"><i class="globe icon"></i>选择语言</a>
                                    <a class="item"><i class="settings icon"></i>账号设置</a>
                                </div>
                            </div>
                            <div class="ui dropdown item pointing left">
                                <i class="dropdown icon"></i>
                                用户
                                <div class="menu">
                                    <a class="item"><i class="edit icon"></i> Edit Profile</a>
                                    <a class="item"><i class="globe icon"></i> Choose Language</a>
                                    <a class="item"><i class="settings icon"></i> Account Settings</a>
                                </div>
                            </div>
                        </nav>
                        <footer class="copyright ui segment">
                            <p>版权所有</p>
                        </footer>
                    </aside>
                </div>
                <div class="col-l-100">
                    <section id="page-context" class="main scrollbar">
                        @RenderBody()
                    </section>
                </div>
            </div>
        </section>
    </div>
    @Script("/Content/js/jquery.min.js")
    @Script("/Content/plugins/semantic/semantic.js")
    @Script("/Content/js/admin.js")
</body>
</html>