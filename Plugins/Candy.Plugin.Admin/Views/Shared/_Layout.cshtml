<!DOCTYPE html>
<html lang="zh-cn" data-ng-app="app">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta name="description" content="" />
    @Style("/Content/css/bootstrap.css")
    @Style("/Content/css/animate.css")
    @Style("/Content/css/font-awesome.min.css")
    @Style("/Content/css/simple-line-icons.css")
    @Style("/Content/css/app.css")
</head>
<body ng-controller="AppCtrl">
    <div class="app app-header-fixed app-aside-fixed" id="app" ui-view></div>
    @RenderBody()

    @Script("/Content/plugins/jquery/jquery.min.js")
    @Script("/Content/plugins/angular/angular.js")
    @Script("/Content/plugins/angular/angular-animate/angular-animate.js")
    @Script("/Content/plugins/angular/angular-ui-router/angular-ui-router.js")
    @Script("/Content/plugins/angular/angular-bootstrap/ui-bootstrap-tpls.js")
    @Script("/Content/plugins/angular/oclazyload/ocLazyLoad.js")

    @Script("/Content/js/app.js")
    @Script("/Content/js/config.js")
    @Script("/Content/js/config.router.js")
    @Script("/Content/js/config.lazyload.js")
    @Script("/Content/js/main.js")
    @Script("/Content/js/services/ui-load.js")
    @Script("/Content/js/directives/ui-nav.js")
    @Script("/Content/js/directives/ui-butterbar.js")
    @Script("/Content/js/directives/ui-jq.js")
    @Script("/Content/js/controllers/bootstrap.js")
    @Script("/Content/js/controllers/Settings.js")
    @Script("/Content/js/controllers/Users.js")
    @Script("/Content/js/controllers/Taxonomy.js")
    @Script("/Content/js/controllers/Pages.js")
</body>
</html>